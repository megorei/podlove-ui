<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <script type="text/javascript">
    window.resourceBaseUrl = '{{ root }}{{ base }}';
  </script>
</head>
<body>
  <div id="app" data-test="player">
    {{{ template }}}
  </div>

  {{#styles}}
  <link rel="stylesheet" href="{{ root }}{{ base }}{{ . }}.css">
  {{/styles}}

  {{#scripts}}
  <script type="text/javascript" src="{{ root }}{{ base }}{{ . }}.js"></script>
  {{/scripts}}

  <script>
    window.iFrameResizer = {
      heightCalculationMethod: 'documentElementOffset'
    };

    {{{ resizer }}}
  </script>

  {{{ loader }}}
</body>
</html>
